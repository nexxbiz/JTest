                    "username": { "type": "string", "required": true },
                    "password": { "type": "string", "required": true }
                },
                "steps": [],
                "output": {
                    "token": "{{$.username}}-{{$.password}}-token",
                    "authHeader": "Bearer {{$.username}}-{{$.password}}-token"
                }
            }
        ]
    }
}