{
    "version": "1.0",
    "info": {
        "name": "Basic Example Test",
        "description": "A simple test to validate JTest functionality"
    },
    "env": {
        "testValue": "hello-world",
        "timeout": 1000
    },
    "globals": {
        "expectedMessage": "test completed"
    },
    "tests": [
        {
            "name": "Variable and Wait Test",
            "steps": [
                {
                    "type": "wait",
                    "id": "waitStep",
                    "ms": 100,
                    "assert": [
                        {
                            "op": "equals",
                            "actualValue": "{{$.this.ms}}",
                            "expectedValue": 100
                        }
                    ]
                },
                {
                    "type": "assert",
                    "id": "assertStep",
                    "assert": [
                        {
                            "op": "equals",
                            "actualValue": "{{$.env.testValue}}",
                            "expectedValue": "hello-world"
                        },
                        {
                            "op": "exists",
                            "actualValue": "{{$.globals.expectedMessage}}"
                        }
                    ]
                }
            ]
        }
    ]
}